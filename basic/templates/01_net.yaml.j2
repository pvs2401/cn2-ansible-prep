# This file describes the network interfaces available on your system
# For more information, see netplan(5).
network:
  version: 2
  renderer: networkd
  ethernets:
    eth0:
      dhcp4: yes
    eth1:
      dhcp4: no
      addresses: [{{ servers[inventory_hostname]['ip'] }}/24]
      routes:
      - to: {{ prefix1 }}
        via: {{ servers[inventory_hostname]['gw'] }}
      - to: {{ prefix2 }}
        via: {{ servers[inventory_hostname]['gw'] }}